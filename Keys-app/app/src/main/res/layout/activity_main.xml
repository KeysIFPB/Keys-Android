<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/branco">


    <Button
        android:text="Locais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/key_black"
        android:paddingLeft="100dp"
        android:drawablePadding="-60dp"
        android:id="@+id/bt_locais"
        android:layout_below="@+id/bt_locais_livres"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Locais Livres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:drawableLeft="@drawable/marker_black"
        android:paddingLeft="100dp"
        android:drawablePadding="-60dp"
        android:id="@+id/bt_locais_livres"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Locais Ocupados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/marker_off_black"
        android:paddingLeft="100dp"
        android:drawablePadding="-60dp"
        android:id="@+id/bt_locais_ocupados"
        android:layout_below="@+id/bt_locais"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_user"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_userInfo"
        android:background="@color/branco" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bt_back"
        android:background="@color/branco" />


</RelativeLayout>